<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginLeft="@dimen/horizontal_margin"
    android:layout_marginRight="@dimen/horizontal_margin"
    android:layout_marginBottom="2dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:background="?android:attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- TODO add a default "no image" image-->
    <ImageView
        android:src="@mipmap/ic_launcher"
        android:id="@+id/pet_container_profile_picture"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_width="80dp"
        android:layout_height="100dp" />

    <TextView
        android:ellipsize="end"
        android:layout_marginRight="2dp"
        android:maxLines="2"
        android:id="@+id/pet_container_description"
        android:textSize="@dimen/default_text_size"
        android:layout_marginLeft="@dimen/horizontal_margin_large"
        android:layout_toRightOf="@id/pet_container_profile_picture"
        tools:text="I'm Linda and I'm the best doggie eve and she loves me. "
        android:layout_below="@id/pet_container_pet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/pet_container_pet_name"
        android:layout_marginLeft="@dimen/horizontal_margin_large"
        android:textSize="@dimen/heading_text_size"
        android:layout_toRightOf="@+id/pet_container_profile_picture"
        tools:text="Linda"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textStyle="italic"
        android:textSize="@dimen/default_text_size"
        android:id="@+id/pet_container_date_lost"
        tools:text="Lost May 4th"
        android:layout_marginLeft="@dimen/horizontal_margin_large"
        android:layout_toRightOf="@id/pet_container_profile_picture"
        android:layout_below="@id/pet_container_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </RelativeLayout>


</android.support.v7.widget.CardView>