<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.Toolbar
        app:contentInsetStart="0dp"
        android:layout_alignParentTop="true"
        android:id="@+id/toolbar"
        android:background="@color/colorPrime"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/horizontal_margin_large"
                android:textSize="@dimen/heading_text_size"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:text="Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>


    <ImageView
        android:layout_below="@+id/toolbar"
        android:id="@+id/profile_picture"
        android:layout_marginTop="@dimen/vertical_margin_extra_large"
        android:layout_centerInParent="true"
        android:src="@mipmap/ic_launcher_round"
        android:layout_width="128dp"
        android:layout_height="128dp" />
    <ImageView
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="@dimen/vertical_margin"
        android:layout_toRightOf="@+id/profile_picture"
        android:src="@drawable/ic_add_circle"
        android:layout_width="32dp"
        android:layout_height="32dp" />

    <ImageView
        android:id="@+id/icon_one"
        android:layout_marginLeft="@dimen/horizontal_margin_large"
        android:layout_marginTop="@dimen/vertical_margin_large"
        android:layout_below="@+id/profile_picture"
        android:src="@drawable/ic_pet_paw"
        android:layout_width="32dp"
        android:layout_height="32dp" />
    <TextView
        android:gravity="center"
        android:layout_alignBaseline="@+id/icon_one"
        android:id="@+id/option_one"
        android:textSize="20sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/horizontal_margin_large"
        android:layout_marginTop="@dimen/horizontal_margin_large"
        android:layout_below="@+id/profile_picture"
        android:layout_toRightOf="@+id/icon_one"
        android:text="@string/user_pets_label"
        android:layout_width="wrap_content"
        android:layout_height="32dp" />
    <View
        android:id="@+id/place_holder_one"
        android:layout_marginTop="@dimen/vertical_margin"
        android:layout_below="@+id/icon_one"
        android:background="@color/background_grey"
        android:layout_marginRight="@dimen/horizontal_margin_large"
        android:layout_marginLeft="@dimen/horizontal_margin_large"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ImageView
        android:id="@+id/icon_two"
        android:layout_marginTop="@dimen/vertical_margin"
        android:layout_marginLeft="@dimen/horizontal_margin_large"
        android:layout_below="@+id/place_holder_one"
        android:src="@drawable/ic_sign_out"
        android:layout_width="32dp"
        android:layout_height="32dp" />
    <TextView
        android:gravity="center"
        android:layout_alignBaseline="@+id/icon_two"
        android:textSize="20sp"
        android:layout_marginLeft="@dimen/horizontal_margin_large"
        android:layout_below="@+id/place_holder_one"
        android:layout_marginTop="@dimen/vertical_margin"
        android:id="@+id/option_two"
        android:layout_toRightOf="@+id/icon_two"
        android:text="@string/sign_out_label"
        android:layout_width="wrap_content"
        android:layout_height="32dp" />
    <View
        android:layout_marginTop="@dimen/vertical_margin"
        android:background="@color/background_grey"
        android:layout_below="@+id/icon_two"
        android:layout_marginRight="@dimen/horizontal_margin_large"
        android:layout_marginLeft="@dimen/horizontal_margin_large"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>