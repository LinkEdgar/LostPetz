<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <DatePicker
        android:id="@+id/choose_date_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp" />

    <TextView
        android:textColor="@color/colorAccen"
        android:id="@+id/choose_date_cancel_textview"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/horizontal_margin_large"
        android:text="@string/date_picker_cancel"
        android:layout_marginLeft="@dimen/horizontal_margin_large"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/choose_date_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/colorAccen"
        android:id="@+id/choose_date_done_textview"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/horizontal_margin_large"
        android:text="@string/date_picker_done"
        android:layout_marginRight="@dimen/horizontal_margin_large"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/choose_date_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>