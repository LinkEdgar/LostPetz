<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/messenger_user_profile_image"
        tools:src="@mipmap/ic_launcher_round"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <LinearLayout
        android:layout_toRightOf="@id/messenger_user_profile_image"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/messnger_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            tools:text="Edgar" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/messenger_user_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Hello how are you doing" />
            <ImageView
                android:layout_marginRight="4dp"
                android:id="@+id/messenger_picture_message_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </FrameLayout>


    </LinearLayout>

</RelativeLayout>