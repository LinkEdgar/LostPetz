<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/maint_activity_drawerlayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowSoftInputMode="adjustNothing"
    android:orientation="vertical"
    tools:context="com.example.enduser.lostpetz.Activities.MainActivity">


        <android.support.v4.view.ViewPager
            android:id="@+id/main_activity_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <View
            android:layout_above="@+id/main_activity_tablayout"
            android:background="@drawable/top_shadow"
            android:layout_width="match_parent"
            android:layout_height="4dp"/>

        <android.support.design.widget.TabLayout
            app:tabIndicatorColor="@color/tabIndicatorColor"
            android:layout_alignParentBottom="true"
            android:id="@+id/main_activity_tablayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_bar_margin"/>

</RelativeLayout>
