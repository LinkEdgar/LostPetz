<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PetSearchDetailActivity">

    <!-- TODO Add more pet info, date lost breed, etc-->

    <android.support.v4.view.ViewPager
        android:id="@+id/search_detail_viewpager"
        android:layout_width="match_parent"
        android:layout_height="275dp"/>

    <me.relex.circleindicator.CircleIndicator
        android:background="@color/colorPrimaryDark"
        android:layout_below="@id/search_detail_viewpager"
        android:id="@+id/search_detail_indicator"
        android:layout_width="match_parent"
        android:layout_height="32dp" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/name_label"
        android:layout_below="@+id/search_detail_indicator"
        android:textSize="@dimen/heading_text_size"
        android:layout_marginTop="@dimen/vertical_margin"
        android:layout_marginLeft="@dimen/horizontal_margin_large"
        android:layout_alignParentLeft="true"
        android:text="@string/name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_toRightOf="@+id/name_label"
        android:textSize="@dimen/heading_text_size"
        android:layout_marginTop="@dimen/vertical_margin"
        android:layout_marginLeft="@dimen/horizontal_margin_large"
        android:layout_below="@+id/search_detail_indicator"
        tools:text="Pet name"
        android:id="@+id/search_detail_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_marginLeft="@dimen/horizontal_margin_large"
        android:layout_marginRight="@dimen/horizontal_margin_large"
        android:layout_marginTop="@dimen/vertical_margin"
        android:layout_below="@+id/search_detail_name_textview"
        android:id="@+id/border_1"
        android:background="#778899"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:textStyle="bold"
        android:textSize="@dimen/heading_text_size"
        android:text="@string/description_label"
        android:layout_marginTop="@dimen/vertical_margin"
        android:id="@+id/search_detail_description_textview_label_textview"
        android:layout_marginLeft="@dimen/horizontal_margin_large"
        android:layout_below="@+id/border_1"
        tools:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="@dimen/heading_text_size"
        android:layout_marginLeft="@dimen/horizontal_margin_large"
        tools:text="Description should go here"
        android:layout_below="@+id/search_detail_description_textview_label_textview"
        android:id="@+id/search_detail_description_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <View
        android:layout_marginLeft="@dimen/horizontal_margin_large"
        android:layout_marginRight="@dimen/horizontal_margin_large"
        android:layout_marginTop="@dimen/vertical_margin"
        android:layout_below="@+id/search_detail_description_textview"
        android:id="@+id/border_2"
        android:background="#778899"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:textSize="@dimen/heading_text_size"
        android:textStyle="bold"
        android:id="@+id/city_label"
        android:layout_marginTop="@dimen/vertical_margin"
        android:text="@string/city_label"
        android:layout_marginLeft="@dimen/vertical_margin_large"
        android:layout_below="@+id/border_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="@dimen/heading_text_size"

        android:id="@+id/search_detail_city_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/border_2"
        android:layout_marginLeft="@dimen/vertical_margin_large"
        android:layout_marginTop="@dimen/vertical_margin"
        android:layout_toRightOf="@+id/city_label"
        tools:text="City goes here" />

    <ImageView
        android:id="@+id/search_detail_static_map"
        android:layout_marginTop="@dimen/vertical_margin_large"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@id/search_detail_city_textview"
        android:layout_width="match_parent"
        android:layout_height="175dp" />

    <android.support.design.widget.FloatingActionButton
        android:layout_marginRight="@dimen/horizontal_margin_large"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_message_large"
        android:text="@string/lost_pet_button"
        android:layout_marginBottom="@dimen/vertical_margin_large"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        tools:text="Lost/Found"
        android:id="@+id/search_detail_lost_button"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>